<Window x:Class="Microsoft.Research.Wwt.Sdk.Samples.LayerGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Layer Group" Height="123" Width="317" WindowStartupLocation="CenterOwner">
    
    <Grid>
        <TextBlock Text="Group Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" />
        <TextBox Name="txtGroupName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,28,0,0" Width="280" Height="22" TextChanged="OnLayerGroupNameChanged" />
        <Button Name="btnCreate" Content="Create" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,79,5" Width="60" Height="25"  Click="OnCreateLayerGroup" IsDefault="True" IsEnabled="False"/>
        <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="OnCancel" Margin="0,0,9,5" Width="60" Height="25" IsCancel="True"/>
    </Grid>
</Window>
